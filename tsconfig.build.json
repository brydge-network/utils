{
  "include": ["src"],
  "compilerOptions": {
    "lib": ["esnext"],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES5",
    "isolatedModules": true,
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true
  }
}
