{
  "include": ["src"],
  "ts-node": {
    "swc": true
  },
  "compilerOptions": {
    "lib": ["esnext"],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES6",
    "isolatedModules": true
  }
}
